table {
  border: 1px solid #CCC;
  border-radius: 5px;
  margin: 0 0 2em;
  width: 95%;
}
table th {
  background: #DDD;
  font-weight: bold;
  text-align: left;
  vertical-align: top;
  width: 33%;
}
table th, table td {
  border-color: #CCC;
  border-style: solid;
  border-width: 0 1px 1px 0;
  padding: 0.5em;
}