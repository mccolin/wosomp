.reg-form-section {
  margin-bottom: 2em;
}
.reg-form-section p.lead {
  margin-bottom: 0;
}
.reg-form-section.stack-labels label:first-child {
  float: left;
  padding-right: 20px;
  text-align: right;
  width: 180px;
}

.reg-form-section .hint {
  font-size: 12px;
  font-style: italic;
}
.reg-form-section.stack-labels .hint {
  display: block;
  clear: both;
  margin-left: 200px;
  max-width: 60%;
}

.team.well {}
.team.well.selected {
  background: #FFF;
  box-shadow: 0 0 10px rgba(0,0,0,0.8);
}
.team.well.unselected {
  background: #AAA;
  opacity: 0.6;
  // background: rgba(0,0,0,0.1);
  // border-left-color: rgba(0,0,0,0.2) !important;
  // border-right-color: rgba(0,0,0,0.2) !important;
  // border-bottom-color: rgba(0,0,0,0.2) !important;
}
.team.well button.selected { display: none; }
.team.well.selected button.selected { display: inline-block; }
.team.well.selected button.unselected { display: none; }
.team.well.unselected button.selected { display: none; }
.team.well.unselected button.unselected { display: inline-block; }


#shirt {
  border: 1px solid #999;
  border-radius: 5px;
  min-height: 210px;
  position: relative;
}
#shirt img {
  display: none;
  position: absolute;
  width: 100%;
  top: 0;
  left: 0;
  z-index: 1;
}
#shirt img.selected, #shirt img.stunt-shirt {
  display: block;
}
#shirt .name, #shirt .number {
  color: #FFF;
  clear: both;
  display: block;
  margin: auto;
  text-align: center;
  text-transform: uppercase;
  position: absolute;
  width: 100%;
  z-index: 2;
}
#shirt .name {
  font-family: CollegeRegular;
  font-size: 25px;
  top: 40px;
  left: 0;
}
#shirt.bigger .name {
  top: 55px;
  font-size: 40px;
}
#shirt .number {
  font-family: CollegeRegular;
  font-size: 80px;
  top: 95px;
  left: 0;
}
#shirt.bigger .number {
  top: 160px;
  font-size: 150px;
}


.athlete-icon {
  background: url(shirts/red.jpg) no-repeat;
  -webkit-background-size: 50px 50px !important;
  -moz-background-size: 50px 50px !important;
  background-size: 50px 50px !important;
  border: 1px solid #999;
  border-radius: 5px;
  display: inline-block;
  margin: 5px;
  position: relative;
  width: 50px;
  height: 50px;
  vertical-align: middle;
}
.athlete-icon.captain {
  border: 1px solid red;
}
<% Team.shirt_colors.each do |color| %>
.athlete-icon.shirt-<%=color%> { background: url(shirts/<%=color%>.jpg) no-repeat; }
<% end %>
