<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>WOSoMP 2013 - May 4 - Kennett Square, PA</title>
    <%= csrf_meta_tags %>

    <!-- Le HTML5 shim, for IE6-8 support of HTML elements -->
    <!--[if lt IE 9]>
      <script src="http://html5shim.googlecode.com/svn/trunk/html5.js" type="text/javascript"></script>
    <![endif]-->

    <!-- Le styles -->
    <%= stylesheet_link_tag "application", :media => "all" %>

    <!-- Le fav and touch icons -->
    <link href="/favicon.ico" rel="shortcut icon">
    <link href="/apple-touch-icon.png" rel="apple-touch-icon">
    <link href="/apple-touch-icon-72x72.png" rel="apple-touch-icon" sizes="72x72">
    <link href="/apple-touch-icon-114x114.png" rel="apple-touch-icon" sizes="114x114">

    <!-- WOSoMP Google Analytics -->
    <script type="text/javascript">
      var _gaq = _gaq || [];
      _gaq.push(['_setAccount', 'UA-30295154-1']);
      _gaq.push(['_trackPageview']);
      (function() {
        var ga = document.createElement('script'); ga.type = 'text/javascript'; ga.async = true;
        ga.src = ('https:' == document.location.protocol ? 'https://ssl' : 'http://www') + '.google-analytics.com/ga.js';
        var s = document.getElementsByTagName('script')[0]; s.parentNode.insertBefore(ga, s);
      })();
    </script>

    <!-- Head content below this comment inserted with yield:head hook -->
    <%= yield :head %>
  </head>
  <body class="home">

    <div id="intro">
      <% unless current_user %>
        Welcome to the official homepage of the Weekend Olympic Showdown of Massive Proportions.
        <%=link_to("Log In", new_user_session_path)-%>
      <% else %>
        Welcome back, <%=current_user.first_name || current_user.email-%>!
        <%=link_to("Your Registration", registration_olympiad_path(next_olympiad))-%> •
        <% if current_user && current_user.admin? %>
          <%=link_to "Admin", admin_root_path %> •
        <% end %>
        <%=link_to("Logout", destroy_user_session_path, :method=>"delete")-%>
      <% end %>
    </div>
    <div id="mast" class="<%=%w(cornholer dogball football wickets).sample()-%>">
      <h1 id="logo"><span>WOSoMP 2013</span></h1>
      <h2>Backyard sports are fun again</h2>

      <% if next_olympiad.is_registering? %>
        <p class="lead">Registration now open for our <%=next_olympiad.begins_at.strftime("%B %-d")-%> event in <%=next_olympiad.city_state-%></p>
        <p><%=link_to "Sign Up to Play", register_olympiad_path(next_olympiad), :class=>"btn btn-success btn-large"%></p>
      <% elsif next_olympiad.is_live? %>
        <p class="lead">The <%=next_olympiad.name-%> WOSoMP event is underway right now! <%=link_to "Follow It Live!", live_path-%></p>
        <p><%=link_to "Live Stats and Ranks", live_path, :class=>"btn btn-success btn-large"%></p>
      <% else %>
        <p class="lead">Registration for our <%=next_olympiad.begins_at.strftime("%B %-d")-%> event in <%=next_olympiad.city_state-%> opens soon</p>
        <p><%=link_to "Learn More", about_path, :class=>"btn btn-success btn-large"%></p>
      <% end %>

      <div id="photo-attributions">
        <span rel="cornholer">Photo: <%=link_to "Cornhole Action", "http://www.flickr.com/photos/niemster/3769423941/in/photostream/", :target=>"_blank"%> by Matt Niemi</span>
        <span rel="dogball">Photo: <%=link_to "His favorite sport", "http://www.flickr.com/photos/gzahnd/2815081942/in/photostream/", :target=>"_blank"%> by Gino</span>
        <span rel="football">Photo: <%=link_to "Backyard Football", "http://www.flickr.com/photos/piper/3602548336/in/photostream/", :target=>"_blank"%> by CaptPiper</span>
        <span rel="wickets">Photo: <%=link_to "189:365 Goal Post", "http://www.flickr.com/photos/charamelody/4905229527/in/photostream/", :target=>"_blank"%> by charamelody</span>
      </div>
    </div>
    <div id="nav-wrapper">
      <div class="container">
        <ul id="top-nav" class="row">
          <%= top_nav_item("Home", home_path) -%>
          <%= top_nav_item("About", about_path) -%>
          <%= top_nav_item("Location", location_olympiad_path(next_olympiad)) -%>
          <%= top_nav_item("Events", events_olympiad_path(next_olympiad)) -%>

          <% if next_olympiad.registration_begins_at <= DateTime.now %>
          <% if current_user && current_user.registered_for?(next_olympiad) %>
            <%= top_nav_item("Your Registration", registration_olympiad_path(next_olympiad), :class=>"feature pull-right") -%>
          <% else %>
            <%= top_nav_item("Register", register_olympiad_path(next_olympiad), :class=>"feature pull-right") -%>
          <% end %>
          <% end %>
        </ul><!--/.row-->
      </div><!--/.container-->
    </div>


    <div id="content-wrapper" class="container">
      <%= render_flash %>
      <%= yield %>
    </div> <!--/#content-wrapper-->


    <footer id="footer">
      <div class="container">
        <div class="row">
          <div class="box span6">
            <%=image_tag "wosomp_shield.png", :class=>"logo" %>
            <%=link_to "Home", home_path %> <br/>
            <% if next_olympiad.registration_begins_at <= DateTime.now %>
              <%=link_to "Register", register_olympiad_path(next_olympiad) %> <br/>
            <% end %>
            <%=link_to "About", about_path %> <br/>
            <%=link_to "Location", location_olympiad_path(next_olympiad) %> <br/>
            <%=link_to "Events", events_olympiad_path(next_olympiad) %> <br/>
            <% if current_user && current_user.admin? %>
              <%=link_to "Admin", admin_root_path %><br/>
            <% end %>
          </div>
          <div class="box span6 pull-right">
            &copy; 2013 WOSoMP <br/>
            <small>
              <%=link_to "Facebook", "http://facebook.com/wosomp" -%> •
              <%=link_to "Twitter", "http://twitter.com/wosomp" -%> •
              <%=link_to "Legalities", terms_path() -%>
            </small>
          </div>
        </div>
      </div>
    </footer>


    <% if false %>
    <div id="account-box-content" class="hidden">
      <% if user_signed_in? %>
        <%=image_tag current_user.photo_url, :align=>"left", :class=>"facebook-pic", :style=>"margin:0 5px 5px 0;"%>
        <p>Logged in as <%=current_user.name%></p>
        <p>
          <%=link_to("Your Account", "#", :class=>"btn")%>
          <%=link_to("Logout", destroy_user_session_path, :method=>"delete", :class=>"btn btn-danger")-%>
        </p>

      <% else %>
        <p>Login or register using Facebook or your email address and password:</p>
        <%= form_for User.new, :as=>"user", :url=>user_session_path do |f| %>
          <%=f.email_field :email, :placeholder=>"Email Address" %>
          <%=f.password_field :password, :placeholder=>"Password" %>
          <br/><%= f.check_box :remember_me %> Remember me<br/><br/>
          <%=f.submit "Login", :class=>"btn btn-success"%>
          <%=link_to "Login with Facebook", user_omniauth_authorize_path(:facebook), :class=>"btn btn-primary" %>
        <% end #form%>
        <%=link_to "Register", new_user_registration_path, :class=>"btn btn-inverse" %><br/>
        <%=link_to "Forgot your password?", new_user_password_path %>

      <% end %>
    </div>
    <% end # if false %>


    <!-- Le javascript
    ================================================== -->
    <!-- Placed at the end of the document so the pages load faster -->
    <%= javascript_include_tag "application" %>

    <!-- Javascript content below this comment inserted with yield:javascripts hook -->
    <%= yield :javascripts %>
  </body>
</html>
