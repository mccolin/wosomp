<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>WOSoMP 2013 - May 4 - Kennett Square, PA</title>
    <%= csrf_meta_tags %>

    <!-- Le HTML5 shim, for IE6-8 support of HTML elements -->
    <!--[if lt IE 9]>
      <script src="http://html5shim.googlecode.com/svn/trunk/html5.js" type="text/javascript"></script>
    <![endif]-->

    <!-- Le styles -->
    <%= stylesheet_link_tag "application", :media => "all" %>

    <!-- Le fav and touch icons -->
    <link href="/favicon.ico" rel="shortcut icon">
    <link href="/apple-touch-icon.png" rel="apple-touch-icon">
    <link href="/apple-touch-icon-72x72.png" rel="apple-touch-icon" sizes="72x72">
    <link href="/apple-touch-icon-114x114.png" rel="apple-touch-icon" sizes="114x114">

    <!-- WOSoMP Google Analytics -->
    <script type="text/javascript">
      var _gaq = _gaq || [];
      _gaq.push(['_setAccount', 'UA-30295154-1']);
      _gaq.push(['_trackPageview']);
      (function() {
        var ga = document.createElement('script'); ga.type = 'text/javascript'; ga.async = true;
        ga.src = ('https:' == document.location.protocol ? 'https://ssl' : 'http://www') + '.google-analytics.com/ga.js';
        var s = document.getElementsByTagName('script')[0]; s.parentNode.insertBefore(ga, s);
      })();
    </script>

    <!-- Head content below this comment inserted with yield:head hook -->
    <%= yield :head %>
  </head>
  <body class="inside">

    <div id="nav-wrapper" class="inside">
      <div class="container">
        <h1 id="logo" class="inside"><span>WOSoMP 2013</span></h1>
        <ul id="top-nav" class="row">
          <%= top_nav_item("Home", home_path) -%>
          <%= top_nav_item("About", about_path) -%>
          <%= top_nav_item("Location", location_olympiad_path(next_olympiad)) -%>
          <%= top_nav_item("Events", events_olympiad_path(next_olympiad)) -%>

          <% if next_olympiad.registration_begins_at <= DateTime.now %>
          <% if current_user && current_user.registered_for?(next_olympiad) %>
            <%= top_nav_item("Your Registration", registration_olympiad_path(next_olympiad), :class=>"feature pull-right") -%>
          <% else %>
            <%= top_nav_item("Register", register_olympiad_path(next_olympiad), :class=>"feature pull-right") -%>
          <% end %>
          <% end %>
        </ul><!--/.row-->
      </div><!--/.container-->
    </div>


    <div id="content-wrapper" class="container">
      <%= render_flash %>
      <%= yield %>
    </div> <!--/#content-wrapper-->


    <footer id="footer">
      <div class="container">
        <div class="row">
          <div class="box span6">
            <%=image_tag "wosomp_shield.png", :class=>"logo" %>
            <%=link_to "Home", home_path %> <br/>
            <% if next_olympiad.registration_begins_at <= DateTime.now %>
              <%=link_to "Register", register_olympiad_path(next_olympiad) %> <br/>
            <% end %>
            <%=link_to "About", about_path %> <br/>
            <%=link_to "Location", location_olympiad_path(next_olympiad) %> <br/>
            <%=link_to "Events", events_olympiad_path(next_olympiad) %> <br/>
            <% if current_user && current_user.admin? %>
              <%=link_to "Admin", admin_root_path %><br/>
            <% end %>
          </div>
          <div class="box span6 pull-right">
            &copy; 2013 WOSoMP <br/>
            <small>
              <%=link_to "Privacy", "#" -%> â€¢
              <%=link_to "Legalities", "#" -%>
            </small>
          </div>
        </div>
      </div>
    </footer>


    <!-- Javascript Invocation -->
    <%= javascript_include_tag "application" %>
    <!-- Javascript content below this comment inserted with yield:javascripts hook -->
    <%= yield :javascripts %>
    <!-- End yielded Javascript -->

  </body>
</html>
